<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_icon_delivery_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_grab_express"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name_delivery_card"
                        android:paddingTop="5dp"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/app_main_color_xanhduong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grab Express"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_weight="100"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical">
                        <CheckBox
                            android:id="@+id/check_delivery_card"
                            android:textSize="24sp"
                            android:layout_width="40dp"
                            android:layout_height="match_parent" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/txt_time_delivery_card"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:paddingStart="10dp"
                    android:background="@color/app_main_color_vang"
                    android:textColor="@color/app_main_color_xanhduong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giao hàng trong "/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="100"
                    android:gravity="bottom|start"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textSize="20sp"
                        android:text="Phí giao hàng: "/>

                    <TextView
                        android:id="@+id/txt_cost_delivery_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18sp"
                        android:text="22,000 đ"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/app_main_color_xanhduong"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_main_color_xanhduong"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>