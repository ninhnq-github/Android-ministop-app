<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_icon_purchase_method_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ewallet"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="80"
                        android:id="@+id/txt_name_purchase_method_card"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/app_main_color_xanhduong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="VISA / Master Card"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="start|center_vertical">
                        <CheckBox
                            android:id="@+id/check_purchase_method_card"
                            android:textSize="24sp"
                            android:layout_width="40dp"
                            android:layout_height="match_parent" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="100">

                    <TextView
                        android:id="@+id/txt_info_purchase_method_card_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Khách hàng thanh toán thông qua ứng dụng Smart Banking của ngân hàng"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/app_main_color_xanhduong"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_main_color_xanhduong"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>