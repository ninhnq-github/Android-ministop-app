<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/app_main_color_vang">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="370dp"
            android:layout_height="126dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_txt_background_trang_boder_2"
            android:orientation="horizontal"
            android:weightSum="100">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40">

                <CheckBox
                    android:id="@+id/check_item_cart_card"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_item_cart_card"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aquafina_500ml_bn5g" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_item_cart_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Nước khoáng Aquafina"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/txt_discounted_cart_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="5,000đ"
                        android:textColor="@color/Red"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_price_item_cart_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/item_old_price_background"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="6,500đ"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:gravity="end"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:id="@+id/img_favorite_cart_card"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:src="@drawable/outline_favorite_border_black_24dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_remove_cart_card"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/outline_remove_circle_outline_black_24dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_quantity_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="10"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_add_cart_card"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/outline_add_circle_outline_black_24dp"
                        android:gravity="center"
                        android:textAlignment="center" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</layout>
