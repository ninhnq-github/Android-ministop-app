<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_name_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:text="Tên địa chỉ"
        android:textColor="@color/Gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_item_address"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/txt_name_address"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="location"
        android:textColor="@color/Gray"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/txt_item_address_id"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/txt_item_address"
        android:background="@color/app_main_color_xanhduong" />

</RelativeLayout>

